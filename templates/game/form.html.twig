{% extends 'base.html.twig' %}

{% block title %}Ajouter un jeu{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
    <h1>Ajouter un jeu</h1>

    {{ form_start(form) }}

    {{ form_row(form.name) }}

    {{ form_row(form.description) }}

    <div class="form-aligned">
        {{ form_row(form.picture) }}
        {{ form_row(form.releaseAt) }}
    </div>

    <div class="form-aligned">
        {{ form_row(form.duration) }}
        {{ form_row(form.minimumAge) }}
    </div>

    <div class="form-aligned">
        {{ form_row(form.minimumPlayer) }}
        {{ form_row(form.maximumPlayer) }}
    </div>

    {{ form_row(form.category) }}
    {{ form_row(form.editors) }}

    <div class="form-end">
        <button class="button">Ajouter</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

